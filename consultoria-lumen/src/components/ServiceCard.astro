---
import type { CollectionEntry } from 'astro:content';
import CalendlyWidget from './CalendlyWidget.astro';

interface Props {
  service: CollectionEntry<'services'>;
}

const { service } = Astro.props;
const { title, price, duration, description, icon, calendlyEventUrl } = service.data;

// Map icons to SVGs
const iconMap = {
  star: `<svg class="w-12 h-12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1"><path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"></path></svg>`,
  cards: `<svg class="w-12 h-12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1"><rect x="2" y="2" width="14" height="20" rx="2" transform="rotate(-10 9 12)"></rect><rect x="8" y="2" width="14" height="20" rx="2" transform="rotate(5 15 12)" class="text-accent"></rect></svg>`,
  default: `<svg class="w-12 h-12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1"><circle cx="12" cy="12" r="10"></circle><path d="M12 6v12m-6-6h12"></path></svg>`
};

const svgIcon = iconMap[icon as keyof typeof iconMap] || iconMap.default;
---

<div class="group relative h-full">
  <!-- Card Container -->
  <div class="relative h-full bg-secondary/30 backdrop-blur-md border border-white/5 p-8 transition-all duration-500 hover:border-accent/30 hover:bg-secondary/50 flex flex-col">
    
    <!-- Corner Accents -->
    <div class="absolute top-0 left-0 w-4 h-4 border-t border-l border-white/20 group-hover:border-accent/50 transition-colors"></div>
    <div class="absolute top-0 right-0 w-4 h-4 border-t border-r border-white/20 group-hover:border-accent/50 transition-colors"></div>
    <div class="absolute bottom-0 left-0 w-4 h-4 border-b border-l border-white/20 group-hover:border-accent/50 transition-colors"></div>
    <div class="absolute bottom-0 right-0 w-4 h-4 border-b border-r border-white/20 group-hover:border-accent/50 transition-colors"></div>

    <!-- Icon -->
    <div class="mb-6 text-white/80 group-hover:text-accent transition-colors duration-500" set:html={svgIcon} />
      
    <h3 class="text-2xl font-serif text-white mb-4 tracking-wide group-hover:translate-x-1 transition-transform duration-300">{title}</h3>
    
    <div class="flex items-center justify-between text-sm text-gray-400 mb-6 border-t border-white/5 pt-4">
      <span class="flex items-center">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
        {duration}
      </span>
      <span class="font-serif text-lg text-white">
        {price}
      </span>
    </div>
    
    <p class="text-gray-400 mb-8 leading-relaxed font-light text-sm flex-grow">
      {description}
    </p>
    
    <div class="mt-auto pt-6 border-t border-white/5">
      <CalendlyWidget url={calendlyEventUrl} text="Reservar SesiÃ³n" />
    </div>
  </div>
</div>
