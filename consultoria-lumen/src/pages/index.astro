---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import AboutSection from '../components/AboutSection.astro';
import ServiceCard from '../components/ServiceCard.astro';
import HealingQuotes from '../components/HealingQuotes.astro';
import { getCollection } from 'astro:content';

const services = await getCollection('services');
---

<Layout title="Consultoria Quintaesencia | AstrologÃ­a y Tarot">
	<Hero />
	
	<AboutSection />
	
	<section id="servicios" class="py-20 bg-black/50">
		<div class="container mx-auto px-4">
			<div class="text-center mb-16">
				<h2 class="text-3xl md:text-5xl font-serif text-gray-100 mb-4">Mis Servicios</h2>
				<div class="w-24 h-1 bg-secondary mx-auto"></div>
				<p class="mt-4 text-gray-400 max-w-2xl mx-auto">
					Sesiones personalizadas para profundizar en tu ser y encontrar respuestas.
				</p>
			</div>
			
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
				{services.map(service => (
					<ServiceCard service={service} />
				))}
			</div>
		</div>
	</section>

	<HealingQuotes />
</Layout>
